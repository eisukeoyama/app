<h3>一覧ページ</h3>
<h3>投稿を検索</h3>
 <%= form_tag({controller:"books",action:"index"}, method: :get) do %>
   <%= text_field_tag :search %>
   <%= submit_tag '検索する'  %>
<% end %>
<%= link_to "新規投稿へ", new_book_path %>
<% if user_signed_in? %>
  <%= link_to "マイページへ", user_path(current_user.id) %>
<% end %>
<p>
<%= link_to "人生論・教訓", "books/life" %>
<%= link_to "自己啓発", "books/self" %>
<%= link_to "仕事術・整理法", "books/work" %>
<%= link_to "心理学", "books/psychology" %>
<%= link_to "思想", "books/thought" %>
<%= link_to "ビジネスライフ", "books/business" %>
<div class="pagination pagination-sm justify-content-center">
<div class="books-container">
 <% @books.each do |t| %>
    <div class="book">
    <%= link_to t.user.name, user_path(t.user.id) %>
    <%= image_tag t.user.image_url, size: "250x200" if t.user.image? %>
    <%= t.user.email %>
      <%= t.namer %>
      <%= t.author %>
      <%= t.year %>
      <%= t.company %>
      <%= t.category %>
      <%= t.learn %>
      <%= t.practice %>
    
  <% if user_signed_in? %>
      <% if current_user.already_liked?(t) %>
          <%= button_to book_like_path(id: t.id, book_id: t.id), method: :delete do %>
            <i class="fa-solid fa-heart"></i><%= t.likes.count %>
          <% end %>
      <% else %>
          <%= button_to book_likes_path(id: t.id, book_id: t.id), method: :post do %>
            <i class="fa-regular fa-heart"></i><%= t.likes.count %>
          <% end %>
      <% end %>
  <% else %>
  <i class="fa-solid fa-heart"></i><%= t.likes.count %>
  <% end %>
      <%= t.created_at %>
    <%= link_to "詳細へ", book_path(t.id) %>
    <%= link_to "編集する", edit_book_path(t.id) %> 
    <%= button_to "削除する", book_path(t.id), method: :delete %>
    </div>
  <% end %>
</div>
<%= paginate @books %>
</div>